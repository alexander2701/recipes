<%- include('partials/header') -%>

<section class='container-fluid'>

  <h2 class='heading heading-md'><%= recipe.name %></h2>
  <h3 class='heading heading-sm'>Bereidingstijd <%= recipe.preparationTime %> minuten</h3>
  <div class="recipe-section container-fluid">
    <div class="row">
      <div class="col-6">
        <h3 class='heading heading-sm'>Ingredienten</h3>
        <ul>
          <% recipe.ingredients.forEach(ingredient => { %>
          <li><%= ingredient %></li>
          <% }) %>
        </ul>
      </div>

    </div>
  </div>
</section>

<%- include('partials/footer') -%>
